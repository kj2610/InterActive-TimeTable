<!DOCTYPE html>
<html>

<head>
    <title>Display</title>

    <!-- links -->
    <link rel="stylesheet" href="public/css/display_styles.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
</head>

<body>
    <nav>
        <div class="nav_items">
            <a href="/"> Home </a>
        </div>
        <div class="nav_items">
            <a href="/about"> About </a>
        </div>
    </nav>
    <div class="title">
        <h1>Display Time-Table</h1>
    </div>
    <div class="container">
        <%- include('include/display_form') %>
    </div>
    <div class="timetable">
        <table>
            <tr>
                <th>Course</th>
                <th>Teacher</th>
                <th>Room</th>
                <% faculty.forEach(function(facultyMember) { %>
            </tr>
            <tr>
                <td>
                    <%= facultyMember.course %>
                </td>
                <td>
                    <%= facultyMember.t_name %>
                </td>
                <td>
                    <%= facultyMember.room %>
                </td>
            </tr>
            <% }); %>
        </table>
    </div>
</body>

</html>